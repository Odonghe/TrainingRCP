<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="pallete" name="Pallete" schema="schema/pallete.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="fr.optilogistic.rental.ui.category"
            name="%category.name">
      </category>
      <view
            category="fr.optilogistic.rental.ui.category"
            class="fr.optilogistic.rental.ui.views.RentalPropertyView"
            id="fr.optilogistic.rental.ui.propertyView"
            name="%view.name"
            restorable="true">
      </view>
      <view
            category="fr.optilogistic.rental.ui.category"
            class="fr.optilogistic.rental.ui.views.RentalTreeView"
            id="fr.optilogistic.rental.ui.rentalTreeView"
            name="%view.name.0"
            restorable="true">
      </view>
      <view
            category="fr.optilogistic.rental.ui.category"
            class="fr.optilogistic.rental.ui.views.CustomerPropertyView"
            id="fr.optilogistic.rental.ui.customerPropertyView"
            name="Customer Property"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="fr.optilogistic.rental.ui.perspectives.RentalPerspective"
            icon="icons/Rentals.png"
            id="fr.optilogistic.rental.ui.perspectives.RentalPerspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="fr.optilogistic.rental.ui.preferences.RentalPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="fr.optilogistic.rental.ui.preferences.RentalPreferencePage"
            id="fr.optilogistic.rental.ui.RentalPreferenceFile"
            name="%page.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="fr.optilogistic.rental.ui.handlers.SimpleHandler"
            id="fr.optilogistic.rental.ui.hello-world"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <command
               commandId="fr.optilogistic.rental.ui.hello-world"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.views.ResourceNavigator?after=additions">
         <command
               commandId="fr.optilogistic.rental.ui.hello-world"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:fr.optilogistic.rental.ui.rentalTreeView?after=additions">
         <command
               commandId="fr.optilogistic.rental.ui.hello-world"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="fr.optilogistic.rental.ui.pallete">
      <Pallete
            class="fr.optilogistic.rental.ui.pallete.FixedBluePallete"
            id="fr.optilogistic.rental.ui.pallete.blue"
            name="Fixed blue">
      </Pallete>
      <Pallete
            class="fr.optilogistic.ui.rental.ui.pallete.DefaultPallete"
            id="fr.optilogistic.ui.rental.ui.pallete.default"
            name="Default">
      </Pallete>
   </extension>

</plugin>
